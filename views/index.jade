extends layout

block content
	h1= title
	p Welcome to our test
  
	//Wrapper
	#wrapper
	
		//USER INFO
		#userInfo
			h2 User INFO
			p
				strong Name:
				|	<span id='userInfoName'></span>
				br
				strong Age:
				|	<span id='userInfoAge'></span>
				br
				strong Gender:
				|	<span id='userInfoGender'></span>
				br
				strong Location:
				|	<span id='userInfoLocation'></span>
		// /USER INFO
		
		//USER LIST
		h2 User List
		#userList
			table
				thead
					th UserName
					th Email
					th Delete?
				tbody
		// /USER LIST	
		
		// ADD USER
		h2 Add User
		#addUser
			fieldset
				input#inputUserName(type='text', placeholder='Username')
				input#inputUserEmail(type='text', placeholder='Email')
				br
				input#inputUserFullName(type='text', placeholder='Full Name')
				input#inputUserAge(type='text', placeholder='Age')
				br
				input#inputUserLocation(type='text', placeholder='Location')
				input#inputUserGender(type='text', placeholder='gender')
				br
				button#btnAddUser Add User
		// /ADD USER

		// UPDATE USER
		h2 Update User
		#updateUser
			fieldset
				input#inputUpUserId(type='text', placeholder='id', readonly='true')
				br
				input#inputUpUserName(type='text', placeholder='Username')
				input#inputUpUserEmail(type='text', placeholder='Email')
				br
				input#inputUpUserFullName(type='text', placeholder='Full Name')
				input#inputUpUserAge(type='text', placeholder='Age')
				br
				input#inputUpUserLocation(type='text', placeholder='Location')
				input#inputUpUserGender(type='text', placeholder='gender')
				br
				button#btnupdateUser Update User
		// /UPDATE USER
				
				
	// /Wrapper		
	
